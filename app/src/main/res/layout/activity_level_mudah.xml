<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgeasy"
    tools:context="com.singpaulee.bangundatardanbangunruang.LevelMudah">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_mudah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff"
        android:minHeight="?attr/actionBarSize">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/bangmat3"/>
    </android.support.v7.widget.Toolbar>

    <ProgressBar
        android:id="@+id/pbhrizontal2"
        android:layout_below="@id/toolbar_mudah"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressTint="#ffff"
        android:max="10" />
    <ProgressBar
        android:id="@+id/pbhrizontal"
        android:layout_below="@id/toolbar_mudah"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/line_nyawa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/pbhrizontal">
        <ImageView
            android:id="@+id/nyawa0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nyawa"/>
        <ImageView
            android:id="@+id/nyawa2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nyawa"/>
        <ImageView
            android:id="@+id/nyawa3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nyawa"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv"
        android:layout_below="@id/toolbar_mudah"
        android:layout_toLeftOf="@id/line_nyawa"
        android:layout_marginRight="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="0"/>

    <TextView
        android:id="@+id/tv_soal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="scasas"
        android:gravity="center"
        android:textSize="16dp"
        android:padding="10dp"
        android:layout_below="@+id/line_nyawa"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:background="@drawable/bgsoaleasy2"/>
    <RadioGroup
        android:id="@+id/rg_jawaban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_below="@id/tv_soal">
        <RadioButton
            android:id="@+id/rba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asdasxasxa"
            android:layout_marginTop="8dp"/>
        <RadioButton
            android:id="@+id/rbb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
        <RadioButton
            android:id="@+id/rbc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
    </RadioGroup>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginRight="10dp"
        android:text="LANJUT"
        android:layout_below="@id/rg_jawaban"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
